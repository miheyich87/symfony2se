<div class="panel-footer">
	<div class="btn-group">
		<button type="button" class="btn btn-default">Actions</button>
		<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
		<span class="caret"></span>
		<span class="sr-only">Toggle Dropdown</span>
		</button>
		<ul class="dropdown-menu" role="menu">
			<li><a href="{{ "{{ path('" ~ route_name_prefix ~ "') }}" }}">Back to the list</a></li>
			{% if ('edit' in actions) and (not hide_edit) %}
				<li>
					<a href="{{ "{{ path('" ~ route_name_prefix ~ "_edit', { 'id': entity.id }) }}" }}">
						Edit
					</a>
				</li>
			{% endif %}
			{% if ('delete' in actions) and (not hide_delete) %}
				<li><a href="#">{{ '{{ form(delete_form) }}' }}</a></li>
			{% endif %}
		</ul>
		</div>
</div>
